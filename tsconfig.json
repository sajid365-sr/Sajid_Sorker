{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "types": [
      "react",
      "react-dom",
      "three"
    ],
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@public/*": [
        "public/*"
      ],
      "@components/*": [
        "components/common/*"
      ],
      "@widgets/*": [
        "components/widgets/*"
      ],
      "@home/*": [
        "components/home/*"
      ],
      "@modules/*": [
        "src/modules/*"
      ],
      "@types/*": [
        "shared/config/@types/*"
      ],
      "@utils/*": [
        "shared/utils/*"
      ],
      "@hooks/*": [
        "shared/hooks/*"
      ],
      "@config/*": [
        "shared/config/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "shared/config/types/next-env.d.ts",
    "shared/config/types/maath.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/not-found.jsx",
    "pages/404.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
